<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <section class="content-header">
     <h1> Transactions </h1>
   </section>
   <!-- Main content -->
   <section class="content">
    <div class="box box-info">
      <!-- /.login-logo -->
       <div class="box-body login-box">
       <div class="login-box-body trans-body">
          <%= form_for :transaction,url: transactions_path,:class=> "form-control" do |f| %>
            <div class="form-group">
              <%= f.select :transaction_type,options_for_transaction_type_select,{prompt: 'Please Select Transaction Type'}, class: "form-control", required: true, placeholder: ""%>
            </div>
             
            <div class="form-group">
              <%= f.number_field :transaction_amount, class: "form-control", required: true, placeholder: "Amonut"%>             
            </div>
                  
          <button class="btn btn-primary btn-block login-btn" type="submit">Submit</button>
        <%end%>
        </div>
        </div>
      <!-- /.login-box-body -->
     </div>
   </section>
   <!-- /.content -->
 </div>