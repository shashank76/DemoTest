<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">

  </section>

  <!-- Main content -->
  <section class="content">

   <div class="box box-info">
     <div class="text-right attendee-cent-s form-group">
      <%= link_to "Edit", edit_user_path(id: current_user.id), :class => "btn btn-default btn-green" %>
     </div>
          <!-- /.box-header -->
      <div class="box-body box-profile">
          <div class="profile-box">
          <div class="form-group has-feedback text-center">
            <%= current_user.image.present? ? image_tag(current_user.image.url,:width => 100, :height => 100, :class => 'profile-ab') : image_tag("/1.png",:width => 100, :height => 100, :class => 'profile-ab') %>
          </div>
          <h3 class="profilecurrent_username text-center"><%= current_user.name%></h3>
          <p class="text-muted text-center"><%= current_user.address%></p>

        <div class="profile-inner">
        <% if current_user.role.eql?("user")%>
        	<div class="p-blocks">
              <label class="view-a left-a">Account Number</label>
              <span class="view-a right-a"><%= current_user.bank_account.try(:account_no) %></span>
          </div>
          <div class="p-blocks">
              <label class="view-a left-a">Available Balance</label>
              <span class="view-a right-a"><%= current_user.bank_account.try(:account_balance) %></span>
          </div>
         <%end%>
          <div class="p-blocks">
              <label class="view-a left-a">Name</label>
              <span class="view-a right-a"><%= current_user.name%></span>
          </div>
          <!-- <div class="p-blocks">
              <label class="view-a left-a">Gender</label>
              <span class="view-a right-a"><%#= current_user.email%></span>
          </div> -->
          <div class="p-blocks">
              <label class="view-a left-a">Date of birth</label>
              <span class="view-a right-a"><%= current_user.dob%></span>
          </div>
          <div class="p-blocks">
              <label class="view-a left-a">Email</label>
              <span class="view-a right-a"><%= current_user.email%></span>
          </div>
          <div class="p-blocks">
              <label class="view-a left-a">Mobile</label>
              <span class="view-a right-a"><%= current_user.mobile%></span>
          </div>
          <div class="p-blocks">
              <label class="view-a left-a">Address</label>
              <span class="view-a right-a"><%= current_user.address%></span>
          </div>
      </div>

          </div>
      </div>
    </div>

  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
